{
  "dependencies": {
    "concurrently": "^7.2.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "start": "concurrently \"npm run start:css\" \"tsc\"",
    "start:css": "npx tailwindcss -i ./src/global/css/global.css -o ./src/compiled/compiled.css --watch",
    "build": "npm run build:css && tsc",
    "build:css": "npx tailwindcss -i ./src/global/css/global.css -o ./src/compiled/compiled.css --minify"
  }
}
